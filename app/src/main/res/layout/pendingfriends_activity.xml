<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="15dp"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/bt_received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pendingFriends_bt_received"
                />
            <View
                android:id="@+id/v_underscoreReceived"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000" />

            </LinearLayout>


        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent"
             />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/bt_sent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pendingFriends_bt_sent"
                />

            <View
                android:id="@+id/v_underscoreSent"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_hintNoPendingRequests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lv_pendingRequsts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>